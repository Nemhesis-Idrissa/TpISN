def syracuse_stops(n):
    t=0
    while n != 1:
        if n % 2 == 0 :
            n = n / 2
        else: 
            n= 3 * n + 1
        t = t + 1
    return t         

def main():
    for i in range(1, 100):
        t = syracuse_stops(i)
        print(i,t)
  
   
                 
main()
